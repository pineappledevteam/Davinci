<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Fragment_Clubs"
    android:id="@+id/fragClubs"
    android:layout_marginBottom="@dimen/navBarHeight">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!--app:layout_constraintBottom_toBottomOf="@+id/bottom_navigation"-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="62dp"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    android:contentDescription="@drawable/gsmstinsignia"
                    app:srcCompat="@drawable/gsmstinsignia" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="13dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@drawable/icon_settings"
                    app:srcCompat="@drawable/icon_settings" />

                <TextView
                    android:id="@+id/clubs"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/logo"
                    android:layout_below="@+id/logo"
                    android:text="@string/clubs"
                    android:textAppearance="@style/header"
                    tools:layout_editor_absoluteY="38dp" />

                <ImageButton
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/clubs"
                    android:layout_marginStart="6dp"
                    android:layout_alignTop="@+id/clubs"
                    android:layout_marginTop="10dp"
                    android:tint="@color/colorPrimaryDark"
                    android:background="@android:color/transparent"
                    android:contentDescription="@drawable/icon_edit"
                    app:srcCompat="@drawable/icon_edit" />

                <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/gridview"
                    android:layout_width="341dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clubs"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:isScrollContainer="false"
                    android:columnWidth="160dp"
                    android:gravity="top"
                    android:horizontalSpacing="10dp"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="10dp" />

                <TextView
                    android:id="@+id/noclubs"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/clubs"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="140dp"
                    android:text="NOCLUBS"
                    android:textAlignment="center"
                    android:textAppearance="@style/bigText"
                    tools:layout_editor_absoluteY="38dp" />

            </RelativeLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>